{
  "name": "@we-are-singular/logger",
  "version": "2.1.3",
  "description": "A simple pinojs wrapper",
  "type": "module",
  "types": ".build/index.d.ts",
  "files": [
    ".build/**/*"
  ],
  "exports": {
    ".": {
      "import": "./.build/index.mjs",
      "require": "./.build/index.cjs",
      "types": "./.build/index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "rollup -c",
    "release": "release-it",
    "lint": "tsc --noEmit && TIMING=1 eslint --color --ext .cjs,.mjs,.js,.ts,.md,.json,.yml,yaml ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/we-are-singular/logger.git"
  },
  "author": "singular",
  "license": "MIT",
  "homepage": "https://github.com/we-are-singular/logger#readme",
  "bugs": {
    "url": "https://github.com/we-are-singular/logger/issues"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.9",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.2.3",
    "@we-are-singular/eslint-config": "^2.4.0",
    "fastify": "^5.7.4",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "rollup": "^4.53.2"
  },
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "peerDependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "overrides": {
    "glob": ">11.1.0"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "git pull -r",
        "npm run build"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "git": {
      "requireBranch": "main",
      "commitMessage": "Release: ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  }
}
